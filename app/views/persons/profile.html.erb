<h1>Профиль</h1>
<%if @user.user_bonuses.any?%>
	<div class="user-bonuses scroll-bar">
		<h3>Бонусы пользователя</h3>
		<% @user.user_bonuses.each do |user_bonus| %>
			<section>
				Название: <%= user_bonus.bonus.name %>
			</section>
			<section>
				Описание: <%= user_bonus.bonus.description %>
			</section>
			<hr>
		<% end %>
	</div>
<%end%>

<table align="center" class="table table-bordered">
		<tr>
			<th>Имя пользователя:</th>
			<td><%= @user.username %></td>
		</tr>

		<tr>
			<th>Email:</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Баланс:</th>
			<td>
				<%= @user.balance %> у.е. 
				<%if current_user?(@user)%>
					<%= link_to "Пополнить", new_add_balance_path, class: 'btn btn-primary' %>
				<%end%>
			</td>
		</tr>

		<%if user_admin?(current_user) && !current_user?(@user)%>
			<%if @user.admin != true%>
				<td><%= link_to "Дать права", give_permission_path(@user), class:"btn btn-primary" %></td>
			<%elsif current_user.owner == true%>
				<td><%= link_to "Забрать права", take_away_permission_path(@user), class:"btn btn-primary" %></td>
			<%end%>

			<%if @user.banned != true%>
				<%if !user_owner?(@user)%>
					<td><%= link_to "Блокировать", ban_path(@user), class:"btn btn-danger" %></td>
				<%end%>
			<%else%>
				<td><%= link_to "Разблокировать", unban_path(@user), class:"btn btn-primary" %></td>
			<%end%>
			<tr>
				<%if !user_owner?(@user)%>
					<td>
						<%= link_to "Удалить пользователя", "/profile/#{@user.id}", class:"btn btn-danger", data: {confirm: "Confirm you want to delete this user"}, method: :delete %>
							
					</td>
				<%end%>
			</tr>
		<%end%>
		<%if current_user?(@user)%>
			<tr>
				<th>Редактировать</th>
				<td><%= link_to "Изменить данные", edit_user_registration_path(@user), class:"btn btn-default", style:"border-radius: 4px; background-color: #e7e7e7; color: black;" %></td>
			</tr>
		<%end%>
</table>

<h1>Проекты пользователя</h1>
<div class="scroll-bar">
	<table class="table table-striped">
		<% @user_projects.each do |user_project| %>
			<tbody>
				<tr> 
					<td align="center"> 
						<div data-turbolinks="false"> <%= link_to user_project.title, project_path(user_project) %> </div>
					</td>
					<% if current_user?(@user) || user_admin?(current_user) %>
						<td align="center">  <%= link_to "Редактировать", edit_project_path(user_project) %> </td>
						<td align="center">  <%= link_to "Удалить", user_project, method: :delete, data: {confirm: "Are you shure?"} %> </td>
					<% end %>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>
<%if current_user?(@user)%>
	<div class="text-center">
		<%= link_to 'Создать проект', new_project_path, class:"btn btn-primary" %>
	</div>
<%elsif user_admin?(current_user)%>
	<div class="text-center">
		<%= link_to "Cоздать проект от имени #{@user.username}", user_project_new_path(@user.id), class:"btn btn-primary" %>
	</div>
<%end%>