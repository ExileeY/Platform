<h1><%= t("tagged.title") %>: <%= params[:tag] %></h1>
<div class="container list text-center">
	<table class="table table-striped">
		<thead>
			<th class="text-center"><%= t("tagged.name") %></th>
			<th class="text-center"><%= t("tagged.description") %></th>
		</thead>
		<%@projects.each do |project|%>	
			<tbody>	
				<tr>
					<td align="center">
						<%= link_to project.title, project_path(project) %>
					</td>
					<td align="center">
						<%=project.description%>
					</td>
				</tr>
			</tbody>
		<%end%>
	</table>
	<%= will_paginate @projects if params[:tag] == nil%>
</div>