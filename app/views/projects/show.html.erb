<div class="container">
	<h1>Проект: <%= @project.title %></h1>
	<h3>Тематика:<%= @project.theme %></h3>
	<h3>Описание:<%= @project.description %></h3>
	<h3>Тэги:<%= @project.tag %></h3>


	<% @project_images.each do |pr_i| %>
		<%= image_tag(pr_i.image.url, alt: 'Image') if pr_i.image?%>
		<%if user_signed_in? && current_user == @project_owner%>
			<%= link_to "Изменить картинку", edit_project_image_path(pr_i) %>
		<% end %>
	<% end %>

	<h3>Создал пользователь: <%= link_to @project.user.username, profile_path(@project.user.id) %></h3>

	
	<h4 align="center">Комментарии пользователей</h4>
	
	<div class="col">
		<div class="message-content">
			<div id="comment_update">
				<%= render 'comments/comment' %>
			</div>
			<% if user_signed_in? %>
				<%= form_with(model:[@user,@user.comments.build], :url => project_comments_path(@project), remote: true) do |f| %>
					<%= f.text_area :body, label:"Комментарий", style: 'resize: none; height:100px;' %>
					<%= f.submit "Отправить", class:"btn btn-primary" %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>